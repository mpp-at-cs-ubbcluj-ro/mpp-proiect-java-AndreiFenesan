<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="632.0" prefWidth="1095.0" xmlns="http://javafx.com/javafx/20" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.labgui.controllers.TeledonController">
    <children>
        <TableView fx:id="charityTableView" layoutX="40.0" layoutY="48.0" prefHeight="200.0" prefWidth="492.0">
            <columns>
                <TableColumn fx:id="idColumn" prefWidth="75.0" text="id" />
                <TableColumn fx:id="caseNameColumn" prefWidth="134.0" text="name" />
                <TableColumn fx:id="descriptionColumn" prefWidth="134.0" text="description" />
                <TableColumn fx:id="totalMoneyColumn" prefWidth="148.0" text="total money raised" />
            </columns>
        </TableView>
        <TableView fx:id="donorsTableView" layoutX="611.0" layoutY="48.0" onMouseClicked="#onSelectedDonor" prefHeight="200.0" prefWidth="445.0">
            <columns>
                <TableColumn fx:id="nameColumn" prefWidth="111.0" text="name" />
                <TableColumn fx:id="emailColumn" prefWidth="170.0" text="email" />
                <TableColumn fx:id="phoneColumn" prefWidth="163.0" text="phone number" />
            </columns>
        </TableView>
        <Button layoutX="820.0" layoutY="537.0" mnemonicParsing="false" onAction="#onAddDonation" text="Add donation" />
        <TextField fx:id="donorEmailField" layoutX="820.0" layoutY="357.0" />
        <TextField fx:id="donorPhoneNumberField" layoutX="820.0" layoutY="415.0" />
        <Label layoutX="754.0" layoutY="308.0" text="Name" />
        <Label layoutX="756.0" layoutY="361.0" text="Email" />
        <Label layoutX="708.0" layoutY="419.0" text="Phone Number" />
        <TextField fx:id="donorNameField" layoutX="820.0" layoutY="304.0" onKeyTyped="#onTextChanged" />
        <Label layoutX="250.0" layoutY="24.0" text="Charity cases" />
        <Label layoutX="816.0" layoutY="24.0" text="Donors" />
        <Spinner fx:id="amountSpinner" layoutX="828.0" layoutY="458.0" />
        <Label layoutX="749.0" layoutY="462.0" text="amount" />
        <Button layoutX="55.0" layoutY="537.0" mnemonicParsing="false" onAction="#onLogOut" text="log out" />
    </children>
</AnchorPane>
